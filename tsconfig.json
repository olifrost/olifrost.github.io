{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "src/**/*.ts",
    "**/*",
    "src/**/*.astro"
  ],
  "exclude": [
    "dist"
  ],
  "baseUrl": ".",
  "paths": {
    "@components/*": [
      "src/components/*"
    ],
    "@assets/*": [
      "src/assets/*"
    ],
    "@layouts/*": [
      "src/layouts/*"
    ],
    "@posts/*": [
      "/blog/*"
    ]
  },
  "compilerOptions": {
    "strictNullChecks": true
  }
}